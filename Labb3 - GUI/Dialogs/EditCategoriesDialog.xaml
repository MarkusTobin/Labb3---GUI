<Window x:Class="Labb3___GUI.Dialogs.EditCategoriesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Categories" Height="300" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox Width="200" Margin="0,0,10,0" Text="{Binding NewCategory, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Add Category" Command="{Binding AddCategoryCommand}"/>
        </StackPanel>

        <ListBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" Grid.Row="1" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,10,0,0">
            <Button Content="Remove Selected" Command="{Binding RemoveCategoryCommand}" CommandParameter="{Binding SelectedCategory}" />
            <Button Content="Close" Margin="10,0,0,0" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
